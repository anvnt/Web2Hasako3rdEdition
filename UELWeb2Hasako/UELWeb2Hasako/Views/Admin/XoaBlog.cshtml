@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}
<div>

    <hr />

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <h3>Bạn muốn xóa Blog này?</h3>

                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.LabelFor(model => model.MaNV, "Nhân viên")

                        </dt>
                        <dd>

                            @Html.DisplayFor(model => model.NHANVIEN.TenNV)
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Tieude, "Tiêu đề")
                            @*
                                @Html.DisplayNameFor(model => model.Tieude)
                            *@
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Tieude)
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Noidung, "Nội dung")
                            @*
                                @Html.DisplayNameFor(model => model.Noidung)
                            *@
                        </dt>

                        <dd>
                            @Truncate(Model.Noidung, 100);
                            @*
        @Html.DisplayFor(model => model.Noidung)
                            *@
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Hinhanh, "Hình ảnh")
                            @*
                                @Html.DisplayNameFor(model => model.Hinhanh)
                            *@
                        </dt>

                        <dd>
                            <img src="@Url.Content("/images/"+Model.Hinhanh)" width="120px" />
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Ngaydang, "Ngày đăng")
                            @*
                                @Html.DisplayNameFor(model => model.Ngaydang)
                            *@
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ngaydang)
                        </dd>

                        <dt>
                            @Html.LabelFor(model => model.Ngaychinhsua, "Ngày chỉnh sửa")
                            @*

                                @Html.DisplayNameFor(model => model.Ngaychinhsua)
                            *@
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ngaychinhsua)
                        </dd>

                    </dl>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Xóa" class="btn btn-danger" /> |
                        @Html.ActionLink("Hủy xóa", "BlogAdmin")
                    </div>
                }

            </div><!-- /.container-fluid -->
        </div>
    </div>

</div>
