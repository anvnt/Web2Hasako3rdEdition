@model UELWeb2Hasako.Models.DONHANG

@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Chi tiết đơn hàng</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>Tên khách hàng</dt>

                    <dd>
                        @Html.DisplayFor(model => model.KHACHHANG.TenKh)
                    </dd>

                    <dt>Tên nhân viên</dt>

                    <dd>
                        @Html.DisplayFor(model => model.NHANVIEN.TenNV)
                    </dd>

                    <dt>Đã thanh toán</dt>

                    <dd>
                        @Html.DisplayFor(model => model.Dathanhtoan)
                    </dd>

                    <dt>Ngày đặt hàng</dt>

                    <dd>
                        @Html.DisplayFor(model => model.Ngaydathang)
                    </dd>

                    <dt>Ngày giao hàng</dt>

                    <dd>
                        @Html.DisplayFor(model => model.Ngaygiaohang)
                    </dd>

                    <dt>Địa chỉ giao hàng</dt>

                    <dd>
                        @Html.DisplayFor(model => model.Diachigiaohang)
                    </dd>

                    <dt>Tình trạng giao hàng</dt>

                    <dd>
                        @if (Model.Tinhtranggiaohang == true)
                        {
                            @:Đã giao hàng
                        }
                        else
                        {
                            @:Chưa giao hàng
                        }
                        @*@Html.DisplayFor(model => model.Tinhtranggiaohang)*@
                    </dd>

                    <dt>Thành tiền</dt>

                    <dd>
                        @Html.DisplayFor(model => model.Thanhtien)
                    </dd>
                    <dt>
                        Danh sách sản phẩm 
                    </dt>
                    <dd>
                        @Html.Action("QuanLyChiTietDonHang", "Admin", new { id = Model.MaDH })

                    </dd>
                </dl>
            </div>

            <p>
                @Html.ActionLink("Điều chỉnh", "SuaDonHang", new { id = Model.MaDH }) |
                @Html.ActionLink("Trở về", "QuanLyDonHang")
            </p>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->