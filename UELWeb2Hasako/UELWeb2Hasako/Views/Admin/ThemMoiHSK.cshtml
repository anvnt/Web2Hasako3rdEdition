@model UELWeb2Hasako.Models.HAISANKHO

@{
    ViewBag.Title = "ThemMoiHSK";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ThemMoiHSK</h2>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
