@model UELWeb2Hasako.Models.HAISANKHO

@{
    ViewBag.Title = "ChitietHSK";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Thông tin chi tiết sản phẩm</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div>
                <h4>HAISANKHO</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Tên hải sản: 
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenHS)
                    </dd>

                    <dt>
                        Đơn giá:
                    </dt>

                    <dd>
                        @String.Format("{0:0,0}",Model.Dongia) VNĐ
                    </dd>

                    <dt>
                        Mô tả: 
                    </dt>

                    <dd style="width:600px; text-align:justify">
                        @Html.DisplayFor(model => model.Mota)
                    </dd>

                    <dt>
                        Hình ảnh:
                    </dt>

                    <dd>
                        <img src="@Url.Content("~/images/"+Model.Anhbia)" width="120px"/>
                    </dd>

                    <dt>
                        Ngày cập nhật: 
                    </dt>

                    <dd>
                        @String.Format("{0:dd/MM/yyyy}",Model.Ngaycapnhat) 
                    </dd>

                    <dt>
                        Đơn vị
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Donvi)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Soluongton)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Soluongton)
                    </dd>

                    <dt>
                        Tên danh mục:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DANHMUCHAISANKHO.TenDM)
                    </dd>

                    <dt>
                        Mã nhập hàng:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaNH)
                    </dd>
                </dl>
            </div>
            <p>
                @Html.ActionLink("Điều chỉnh", "SuaHSK", new { id = Model.MaHS }) |
                @Html.ActionLink("Trở về", "QuanLySanPham")
            </p>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->