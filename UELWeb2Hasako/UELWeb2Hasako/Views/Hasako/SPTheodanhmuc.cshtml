
@{
    ViewBag.Title = "Sản phẩm theo danh mục";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

@foreach (var sanpham in Model)

{
    <div class="product_item">
        <div class="product_border"></div>
        <a href="@Url.Action("Details","Hasako",new { id = sanpham.MaHS })">
            <div class="product_image d-flex flex-column align-items-center justify-content-center"><img src="~/images/@sanpham.Anhbia" alt=""></div>
            <div class="product_content">
                <div class="product_price">@string.Format("{0:0,0}", sanpham.Dongia) VNĐ</div>
                <div class="product_name"><div><a href="@Url.Action("ChiTietSanPham","Hasako",new { id = sanpham.MaHS })" tabindex="0">@sanpham.TenHS</a></div></div>
            </div>
            <div class="product_fav"><i class="fas fa-heart"></i></div>
            <ul class="product_marks">
                <li class="product_mark product_discount">-25%</li>
                <li class="product_mark product_new">new</li>
            </ul>
        </a>
    </div>

}