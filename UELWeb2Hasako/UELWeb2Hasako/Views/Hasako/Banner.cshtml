@model IEnumerable<UELWeb2Hasako.Models.BanChayNhat>

@foreach (var hs in Model)
{
    <div class="owl-item">
        <div class="banner_2_item">
            <div class="container fill_height">
                <div class="row fill_height">
                    <div class="col-lg-4 col-md-6 fill_height">
                        <div class="banner_2_content">
                            <div class="banner_2_category">@hs.TenDM</div>

                            <div class="banner_2_title">@hs.TenHS</div>
                            <div class="banner_2_text">@hs.MoTa</div>
                            <div class="rating_r rating_r_4 banner_2_rating"><i></i><i></i><i></i><i></i><i></i></div>
                            <div class="button banner_2_button">
                                <a href="@Url.Action("Details", "Hasako", new { id = hs.MaHS })">
                                    Tìm hiểu
                                </a>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-8 col-md-6 fill_height">
                        <div class="banner_2_image_container">
                            <a href="@Url.Action("Details", "Hasako", new { id = hs.MaHS })">

                                <div class="banner_2_image"><img src="../images/@hs.AnhBia" alt="@hs.TenHS"></div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
