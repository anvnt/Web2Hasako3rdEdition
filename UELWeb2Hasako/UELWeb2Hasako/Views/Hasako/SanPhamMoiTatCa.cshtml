@model IEnumerable<UELWeb2Hasako.Models.HAISANKHO>
@{
    var spgiamgia = UELWeb2Hasako.Models.SanPhamDangGiamGia.LaySanPham();
}
@foreach (var spmoihs in Model)
{
    bool hienthi = false;

    foreach (var spgg in spgiamgia)
    {
        if (spmoihs.MaHS == spgg.MaHS)
        {
            hienthi = true;
            <div class="featured_slider_item">
                <div class="border_active"></div>
                <div class="product_item discount d-flex flex-column align-items-center justify-content-center text-center">
                    <a href="@Url.Action("Details", "Hasako", new { id = spmoihs.MaHS })">

                        <div class="product_image d-flex flex-column align-items-center justify-content-center"><img src="~/images/@spgg.AnhBia" alt="@spmoihs.TenHS"></div>
                    </a>
                    <div class="product_content">
                        <a href="@Url.Action("Details", "Hasako", new { id = spmoihs.MaHS })">

                            <div class="product_price discount">@string.Format("{0:0,0}", spgg.GiaKM) đ<span>@string.Format("{0:0,0}", spgg.DonGia) đ</span></div>
                        </a>
                        <div class="product_name">
                            <div>
                                <a href="@Url.Action("Details", "Hasako", new { id = spmoihs.MaHS })">
                                    @spmoihs.TenHS
                                </a>
                            </div>
                        </div>
                        <div class="product_extras">
                            <button class="product_cart_button">Mua ngay</button>
                        </div>
                    </div>
                    <div class="product_fav"><i class="fas fa-heart"></i></div>
                    <ul class="product_marks">
                        <li class="product_mark product_discount">@spgg.PhanTramGiam%</li>
                        <li class="product_mark product_new"></li>
                    </ul>
                </div>
            </div>
            break;
        }
    }
    if (hienthi == false)
    {
        <div class="arrivals_slider_item">
            <div class="border_active"></div>
            <div class="product_item is_new d-flex flex-column align-items-center justify-content-center text-center">
                <a href="@Url.Action("Details", "Hasako", new { id = spmoihs.MaHS })">
                    <div class="product_image d-flex flex-column align-items-center justify-content-center"><img src="~/images/@spmoihs.Anhbia" alt="@spmoihs.TenHS"></div>
                </a>
                <div class="product_content">
                    <a href="@Url.Action("Details", "Hasako", new { id = spmoihs.MaHS })">

                        <div class="product_price">@string.Format("{0:0,0}", spmoihs.Dongia) VNĐ</div>
                    </a>
                    <div class="product_name">
                        <div>
                            <a href="@Url.Action("Details", "Hasako", new { id = spmoihs.MaHS })">
                                @spmoihs.TenHS
                            </a>
                        </div>
                    </div>
                    <div class="product_extras">
                        <button class="product_cart_button">Mua ngay</button>
                    </div>
                </div>
                <div class="product_fav"><i class="fas fa-heart"></i></div>
                <ul class="product_marks">
                    <li class="product_mark product_discount">-25%</li>
                    <li class="product_mark product_new">mới</li>
                </ul>
            </div>
        </div>
    }
}
