@model IEnumerable<UELWeb2Hasako.Models.SanPhamDangGiamGia>


@foreach (var sp in Model)
{
    <div class="featured_slider_item">
        <div class="border_active"></div>
        <div class="product_item discount d-flex flex-column align-items-center justify-content-center text-center">
            <a href="@Url.Action("Details", "Hasako", new { id = sp.MaHS })">
                <div class="product_image d-flex flex-column align-items-center justify-content-center"><img src="~/images/@sp.AnhBia" alt="@sp.TenHS"></div>
                </a>
            <div class="product_content">
                <a href="@Url.Action("Details", "Hasako", new { id = sp.MaHS })">

                    <div class="product_price discount">
                        @string.Format("{0:0,0}", sp.GiaKM) đ<span>@string.Format("{0:0,0}", sp.DonGia)đ</span>
                    </div>
                    </a>
                    <div class="product_name">
                        <div>
                            <a href="@Url.Action("Details", "Hasako", new { id = sp.MaHS })">
                                @sp.TenHS
                            </a>
                        </div>
                    </div>
                    <div class="product_extras">
                        <button class="product_cart_button">Mua ngay</button>
                    </div>
            </div>
                <div class="product_fav"><i class="fas fa-heart"></i></div>
                <ul class="product_marks">
                    <li class="product_mark product_discount">@sp.PhanTramGiam%</li>
                    <li class="product_mark product_new"></li>
                </ul>
        </div>
    </div>
}
